{
  "name": "ecv-shortener",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm --filter @ecv/web dev",
    "build": "pnpm -r run build",
    "preview": "pnpm --filter @ecv/web preview",
    "test": "pnpm run test:domain && pnpm run test:functions && pnpm run test:e2e:smoke",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:tag": "pnpm changeset version && git add -A && git commit -m \"chore(release): version\" || true && git push --follow-tags",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier -w .",
    "typecheck": "tsc -b -v --noEmit",
    "test:domain": "vitest -c vitest.config.domain.ts run",
    "test:functions": "vitest --config vitest.config.functions.ts run",
    "test:ui": "vitest -c vitest.config.ui.ts run",
    "test:e2e:smoke": "playwright test --project=chromium"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@cloudflare/vitest-pool-workers": "^0.8.67",
    "@cloudflare/workers-types": "^4.20250826.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@playwright/test": "^1.47.0",
    "@types/node": "^20.14.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "2.1.9",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "miniflare": "^4.20250823.0",
    "msw": "^2.4.0",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.41.0",
    "vitest": "^2.1.9",
    "vitest-environment-miniflare": "^2.14.4",
    "wrangler": "^4.33.0",
    "zod": "^4.1.3"
  }
}